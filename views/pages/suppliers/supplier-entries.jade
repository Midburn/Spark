extends ../../includes/page
block content
    .camps.camp_admin_index(ng-app="ngSuppliers")
        .container.col-md-12
            h1=t(t_prefix+'entries.suppliers')
            p.lead.text-muted=t(t_prefix+'entries.desc')
        .controls.row
            .col-xs-12
                div.block-center
                    div.input-group
                        if isAdmin
                            a.Btn.Btn__green.card-switcher#4(role='button')
                                span.glyphicon.glyphicon-plus(aria-hidden="true")
                                span=t(t_prefix+'entries.supplier_entrance')

        .cards--wrapper.card__shad(ng-controller="supplierEntriesController")
            .card.card-first.card__padding--even.col-xs-12.table-responsive
                datalist(id="supplierList")
                    option(ng-repeat="supplier in suppliers", label="{{supplier.main_contact_name}}", value="{{supplier.supplier_id}}") {{supplier}}
                //- Card 1
                h4=t(t_prefix+'edit_new.suppliers')
                .controls.row
                  .col-xs-12.col-md-12
                        input.form-control(id='camps_list_search_camp', ng-model="searchCamp", type="text", placeholder="#{t(t_prefix+'entries.search')}")
                table.table.table-stats.table-striped.table-hover#admin_camps
                    thead
                        tr.headers
                            th(ng-click='changeOrderBy("supplier_id")')=t(t_prefix+'entries.id')
                            th.camp_name_en(ng-click='changeOrderBy("main_contact_name")')=t(t_prefix+'entries.name')
                            th.contact_person(ng-click='changeOrderBy("vehicle_plate_number")')=t(t_prefix+'entries.vehicle_plate_number')
                            th.status(ng-click='changeOrderBy("number_of_people_entered")')=t(t_prefix+'entries.num_people_in_vehicle')
                            th.number(ng-click='changeOrderBy("main_contact_phone_number")')=t(t_prefix+'entries.contact_number')
                            th.hidden-xs(ng-click='changeOrderBy("allowed_visa_hours\n")')=t(t_prefix+'entries.visa_duration')
                            th.published(ng-click='changeOrderBy("enterance_time")')=t(t_prefix+'entries.entrance_time')
                            th.midmarket(ng-click='changeOrderBy("enterance_time")')=t(t_prefix+'entries.departure_time')
                            th.entrance_quota(ng-click='changeOrderBy("supplier_status")')=t(t_prefix+'entries.status')
                    tbody
                        tr(ng-repeat="entry in entries | filter: searchCamp | orderBy: orderCamps")
                            td {{ entry.supplier_id }}
                            td {{ entry.main_contact_name }}
                            td {{ entry.vehicle_plate_number }}
                            td {{ entry.number_of_people_entered }}
                            td {{ entry.main_contact_phone_number }}
                            td {{ entry.allowed_visa_hours}}
                            td {{ entry.enterance_time | date : 'medium' }}
                            td {{ entry.departure_time | date : 'medium' }}
                            td {{ entry.supplier_status }}
                            td
                                button.btn.btn-xs(ng-click="supplierLeft(entry)", ng-hide="entry.supplier_status !== 'Inside'")
                                    span(class='glyphicon glyphicon-glyphicon-remove')
                                    =t(t_prefix+'entries.exit')
            .choose_name.card.card-forth.card__padding--even.card-hide.col-xs-12
                h2=t(t_prefix+'entries.new')
                .col-sm-6.col-xs-12
                    .pos-r
                        label=t(t_prefix+'edit_new.id')
                        input(list="supplierList", id='new-supplier-entry-vat', type="text", class="form-control", name="supplier_id", autofocus="true", ng-model="newEntry.supplier_id", required)
                        label=t(t_prefix+'entries.vehicle_plate_number')
                        input(id='new-supplier-entry-plate', type="text", class="form-control", name="supplier_plate", autofocus="true", ng-model="newEntry.vehicle_plate_number", required)
                .col-sm-6.col-xs-12
                    .pos-r
                        label=t(t_prefix + 'entries.num_people_in_vehicle')
                        input(id='new-supplier-entry-people', type="text", class="form-control", name="supplier_people", autofocus="true", ng-model="newEntry.number_of_people_entered", required)
                        label=t(t_prefix + 'entries.visa_duration')
                        input(id='new-supplier-entry-hours', type="text", class="form-control", name="supplier_hours", autofocus="true", ng-model="newEntry.allowed_visa_hours", required)
                .col-sm-12.col-xs-12
                    a.Btn.Btn__green.Btn__inline.btn(role='button', ng-click="addEntry()")=t(t_prefix+'entries.add_entry')
                    a.Btn.Btn__red.Btn__inline.btn.card-switcher#1(role='button')
                        span=t(t_prefix+'entries.cancel')

