extends ../../includes/page
block content
    .camps.camp_index
        section.jumbotron
            .container
                h1.jumbotron-heading=t('camps:dash.title')
                p.lead.text-muted=t('camps:dash.desc')
                div.block-center
                    div.input-group
                        a.Btn.Btn__default.reveal_create_camp_btn(href='javascript:;', role='button')=t('camps:new.btn_create')
                        a.Btn.Btn__default.reveal_join_camp_btn(href='javascript:;', role='button')=t('camps:join.join_a_camp')
                        a.Btn.Btn__default.reveal_manage_camp_btn(href='javascript:;', role='button')=t('camps:manage.manage_a_camp')
                .cards--wrapper
                    .shad.choose_name.card.card-first.card-hide
                        button.card--close.Btn.Btn__close
                            span.glyphicon.glyphicon-remove(aria-hidden='true')
                        h2=t('camps:new.header_title')
                        h4=t('camps:new.name_choosing_title')

                        .form-group.pos-r
                            label=t('camps:new.name_en')
                            input(type="text", class="form-control", name="camp_name_en", autofocus="true", required)
                            span.indicator
                                span.glyphicon
                        .form-group
                            a.Btn.Btn__green.hidden(id="check_camp_name", role='button')=t('camps:btn_continue')

                    .shad.join_camp.card.card-second.card-hide
                        button.card--close.Btn.Btn__close
                            span.glyphicon.glyphicon-remove(aria-hidden='true')
                        h2=t('camps:join.header_title')
                        h4=t('camps:join.camp_choosing_title')

                        .form-group
                            label=t('camps:join.name_en')
                            select(type="text", class="form-control", name="camp_name_en", autofocus="true", required)
                        .form-group
                            a.Btn.Btn__green(id="join_camp", role='button')=t('camps:btn_continue')
                            span.indicator
                                span.glyphicon
                        .form-group
                            a.Btn.Btn__green.hidden(id="request_camp_join", role='button')=t('camps:join.request')

                    .shad.camp_manage.card.card-third.card__even-pad.card-hide
                        button.card--close.Btn.Btn__close
                            span.glyphicon.glyphicon-remove(aria-hidden='true')
                        .row
                            .col-sm-10
                                a.Btn.Btn__card(href='/#{language}/camps-stats', role='button')
                                    img.img-responsive(src="data:image/svg+xml;utf8;base64,")
                                    span.title=t('camps:dash.stats.title')
                                    span.arrow →

                            .col-sm-10
                                a.Btn.Btn__card(href='/#{language}/camps-members', role='button')
                                    img.img-responsive(src="data:image/svg+xml;utf8;base64,")
                                    span.title=t('camps:dash.members.title')
                                    span.arrow →

                            .col-sm-10
                                a.Btn.Btn__card(href='/#{language}/camps-docs', role='button')
                                    img.img-responsive(src="data:image/svg+xml;utf8;base64,")
                                    span.title=t('camps:dash.docs.title')
                                    span.arrow →
