extends ../../includes/page
block content
    .camps.camp_edit
        section
            .heading.card.card__shad.row
                .col-md-12
                    h2 Editing: #{camp.camp_name_en}
                    span.label.label-info Camp # #{camp.id}
                    h6 Since: #{camp.created_at}
            .controls.card.row
                .col-xs-12    
                    //- Card switcher
                    button.Btn.Btn__default.card-switcher--card1 Basic Information
                    button.Btn.Btn__transparent.card-switcher--card2 Camp Details
            .cards--wrapper.card__shad.row
                //- Card 1
                .card.card-first
                    h4 Camp Name & Description
                    .camp-info.panel
                        .panel-body
                            .names.col-md-6
                                .input-group.col-xs-12
                                    label(for='edit_camp_name_en') Name (EN)
                                    input.form-control(id='edit_camp_name_en', name='camp_name_en', value='#{camp.camp_name_en}', autofocus)
                                .input-group.col-xs-12
                                    label(for='edit_camp_name_he') Name (HE)
                                    input.form-control(id='edit_camp_name_he', name='camp_name_he', value='#{camp.camp_name_he}')
                            .descriptions.col-md-6
                                .input-group.col-xs-12
                                    label(for='edit_camp_desc_en') Description (EN)
                                    textarea.form-control(id='edit_camp_desc_en', name='camp_desc_en') #{camp.camp_desc_en}
                                .input-group.col-xs-12
                                    label(for='edit_camp_desc_he') Description (HE)
                                    textarea.form-control(id='edit_camp_desc_he', name='camp_desc_he') #{camp.camp_desc_he}
                    h4 Camp Contact Personnel
                    .camp-leaders.panel
                        .panel-body
                            .personnel
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_camp_main_contact') Main Contact
                                        select.form-control(id='edit_camp_main_contact', name='main_contact')
                                            option.selected(value='#{camp.main_contact}', selected) #{camp.main_contact}
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_camp_moop_contact') Main Contact
                                        select.form-control(id='edit_camp_moop_contact', name='moop_contact')
                                            option.selected(value='#{camp.moop_contact}', selected) #{camp.moop_contact}
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_camp_safety_contact') Main Contact
                                        select.form-control(id='edit_camp_safety_contact', name='safety_contact')
                                            option.selected(value='#{camp.safety_contact}', selected) #{camp.safety_contact}
                    h4 Camp Behaviour
                    .camp-leaders.panel
                        .panel-body
                            .camp-modifiers
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_camp_type') Type: #{camp.camp_type || 'n/a'}
                                        select.form-control(id='edit_camp_type', name='camp_type')
                                            option(selected) ---
                                            option food
                                            option drinking/bar
                                            option music
                                            option workshops
                                            option art-supporting
                                            option other
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_camp_status') Status: #{camp.camp_status || 'n/a'}
                                        select.form-control(id='edit_camp_status', name='camp_status')
                                            option(selected) ---
                                            option(value='open') Open
                                            option(value='closed') Closed
                                            option(value='inactive') Inactive
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_camp_enabled') Publication: &nbsp;
                                        if camp.camp_enabled == 0
                                            span Camp is public
                                        else
                                            span Camp is invisible
                //- Card 2
                .card.card-second.card-hide
                    h4 Camp Behavior
                    .camp-details.panel
                        .panel-body
                            .camp-behavior
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_camp_activity_time')=t('camps.new.camp_activity_time')
                                        input.form-control(id='edit_camp_activity_time', name='camp_activity_time', value='#{details.camp_activity_time}', autofocus)
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_child_friendly')=t('camps.new.camp_child_friendly')
                                        input.form-control(id='edit_child_friendly', name='child_friendly', value='#{details.child_friendly}')
                                .col-md-4
                                    .input-group.col-xs-12
                                        label(for='edit_noise_level')=t('camps.new.camp_noise_level')
                                        input.form-control(id='edit_noise_level', name='noise_level', value='#{details.noise_level}')
                      h4 Camp Public Area
                      .camp-details.panel
                          .panel-body
                              .camp-public
                                  .col-md-4
                                      .input-group.col-xs-12
                                          label(for='edit_public_activity_area_sqm')=t('camps.new.public_activity_area_sqm')
                                          input.form-control(id='edit_public_activity_area_sqm', name='public_activity_area_sqm', value='#{details.public_activity_area_sqm}')
                                  .col-md-4
                                      .input-group.col-xs-12
                                          label(for='edit_public_activity_area_desc')=t('camps.new.public_activity_area_desc')
                                          input.form-control(id='edit_public_activity_area_desc', name='public_activity_area_desc', value='#{details.public_activity_area_desc}')
                                  .col-md-4
                                      .input-group.col-xs-12
                                          label(for='edit_support_art') support_art
                                          input.form-control(id='edit_support_art', name='public_support_art', value='#{details.support_art}')
                      h4 Camp Location
                      .camp-details.panel
                          .panel-body
                              .camp-location
                                  .col-md-4
                                      .input-group.col-xs-12
                                          label(for='edit_location_comments') location_comments
                                          input.form-control(id='edit_location_comments', name='location_comments', value='#{details.location_comments}')
                                  .col-md-4
                                      .input-group.col-xs-12
                                          label(for='edit_camp_location_street') camp_location_street
                                          input.form-control(id='edit_camp_location_street', name='camp_location_street', value='#{details.camp_location_street}')
                                  .col-md-4
                                      .input-group.col-xs-12
                                          label(for='edit_camp_location_street_time') camp_location_street_time
                                          input.form-control(id='edit_camp_location_street_time', name='public_camp_location_street_time', value='#{details.camp_location_street_time}')
                                  .col-md-4
                                      .input-group.col-xs-12
                                          label(for='edit_camp_location_area') camp_location_area
                                          input.form-control(id='edit_camp_location_area', name='public_camp_location_area', value='#{details.camp_location_area}')

            .controls.row
                .col-xs-12
                    button.Btn.Btn__default(id='camp_edit_save') Save
