extends layout
block wrapper
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button( type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand( href="/#{language}/home" ) Spark
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav
                    li( class="#{path[2] === 'home' ? 'active' : undefined }" )
                        a( href="/#{language}/home" )=t('home')
                    li( class="#{path[2] === 'npo' ? 'active' : undefined }" )
                        a( href="npo" )=t('npo')
                ul.nav.navbar-nav.navbar-right(style="#{language === 'he' ? 'float:left!important' : ''}")
                    li.dropdow
                        a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
                            if (language=='he')
                                img( src="/images/flags/he.gif" )
                            if (language=='en')
                                img( src="/images/flags/en.gif" )
                            span.caret
                        ul.dropdown-menu
                            li
                                a( href="/he#{req.url.substr(3)}" )
                                    img( src="/images/flags/he.gif" )
                                    |&nbsp;
                                    span=t('hebrew')
                            li
                                a( href="/en#{req.url.substr(3)}" )
                                    img( src="/images/flags/en.gif" )
                                    |&nbsp;
                                    span=t('english')
                    li
                        //TODO replace 'a' tag with something else
                        a #{user.attributes.first_name} #{user.attributes.last_name}
                    li
                        a( href= '/#{language}/logout' )=t('logout')
    .container
        block content
